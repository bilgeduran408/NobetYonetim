@{
}
@{
    ViewData["Title"] = "Öğretim Üyeleri Sayfası";  // Sayfanın başlığını belirliyoruz
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>  <!-- Dinamik başlık -->
    <!-- Bootstrap CSS (veya başka bir stil kütüphanesi) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Sayfa özel stil dosyasını ekleyin -->
    <link href="~/css/styles.css" rel="stylesheet" />
</head>
<body>

    <!-- Sayfa Başlığı ve Menü (Navbar) -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "Home")">Anasayfa</a>
                        </li>

                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Sayfanın içeriği (render body) -->
    <main role="main" class="container my-4">
        @RenderBody()  <!-- İçerik bu alanda render edilir -->
    </main>

    <!-- Sayfa alt kısmı (footer) -->
    <footer class="bg-light py-4">
        <div class="container text-center">
            <p>&copy; 2024 - Öğretim Üyeleri Projesi. Tüm Hakları Saklıdır.</p>
        </div>
    </footer>

    <!-- Bootstrap ve JavaScript dosyalarını ekleyin -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>